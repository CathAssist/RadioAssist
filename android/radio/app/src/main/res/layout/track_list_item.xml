<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/track_item_height"
    android:padding="5dip"
    android:paddingBottom="15dp">

    <TextView
        android:layout_width="@dimen/track_item_title_width"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_tracktitle"
        android:gravity="center"
        android:id="@+id/track_item_title" />

    <TextView
        android:layout_width="@dimen/track_item_percent_widht"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_downloading"
        android:id="@+id/track_item_percent"
        android:gravity="center"/>

</LinearLayout>